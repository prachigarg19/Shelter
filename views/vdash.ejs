<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <link rel="stylesheet" href="../css/vdash.css">
    <link rel="stylesheet" href="../css/footer.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://kit.fontawesome.com/c6c86b918e.js" crossorigin="anonymous"></script>
</head>
<body>
    <nav>
        <!-- navbar -->
        <div class="nav-outer-container">
            <div class="nav-left">
                <img src="../Images/logo.png" alt="Logo">
            </div>
            <div class="nav-right">
                <i class="far fa-user-circle" onclick="location.href='../html/vprofile.html';"></i>
                <button id="login" class="sign-up" onclick="location.href='./';">Log out</button>
                </div>
              </div>
                           
    </nav>
    <!-- below-navbar -->
    <div class="container">
        <div class="welcome-container">
            <h3>Welcome!</h3>
        </div>
        <div class="filter">
            <div class="dropdown">
                <button class="btn sign-up dropdown-toggle " type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                  Choose Area
                </button>
                <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1" class="list" >
                  <li  class="dropdown-list"><a id="North Delhi" class="dropdown-item" href="#">North Delhi</a></li>
                  <li  class="dropdown-list"><a id="East Delhi" class="dropdown-item" href="#">East Delhi</a></li>
                  <li  class="dropdown-list"><a id="South Delhi" class="dropdown-item" href="#">South Delhi</a></li>
                  <li  class="dropdown-list"><a id="West Delhi"class="dropdown-item" href="#">West Delhi</a></li>
                </ul>
              </div>
        </div>
        <br> <br>  <br>
       <!-- list of ngos -->
        <div class="card-container" id="cards">
               
        </div>

        <hr>
        <span id="interested-heading">NGO's you're Interested in</span>
        <div class="card-container" id="interested-container">
            <% arr.forEach(function(inarr) { %>
            <div class="cards">
                <div class="card-details">
                <h2><%= inarr.name%></h2>
                <h4>  <i class="fas fa-map-pin"></i>
                    <p><%= inarr.address%></p>
                </h4>
                <h4>
                    <span>Contact:</span>
                    <p><%= inarr.phone%></p>
                </h4>
                
            </div>
            <% }); %>
        </div>
    </div>
    <!-- footer -->
    <footer>
        <div class="footer-container">
            <div class="left-footer">
                <img src="../Images/logo.png" alt="logo">
                <p class="copyright">Â© SAVE OUR STRAYS 2021</p>
            </div>
            <div class="right-footer">
                <h2 class="follow">Follow Us</h2><br>
                <div class ="social">
                  <a href="#"><i class="fab fa-instagram"></i></a>
                  <a href="#"><i class="fab fa-facebook"></i></a>
                  <a href="#"><i class="fab fa-twitter"></i></a>
                </div>
            </div>
    
        </div>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <script src="../script/vdash.js"></script>

</body>
</html>